<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#138787"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/train_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_train"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_weight="0"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/ic_train" />

            <TextView
                android:id="@+id/tv_train"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:textColor="#fff"
                android:text="训练" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/club_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_club"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_weight="0"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/ic_club" />

            <TextView
                android:id="@+id/tv_club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:textColor="#fff"
                android:text="俱乐部" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/index_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_index"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_weight="0"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/ic_yuejian" />

            <TextView
                android:id="@+id/tv_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:textColor="#fff"
                android:text="约健" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pic_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_pic"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_weight="0"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/ic_photo" />

            <TextView
                android:id="@+id/textView_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:textColor="#fff"
                android:text="晒图" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/me_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_me"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_weight="0"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/ic_me" />

            <TextView
                android:id="@+id/textView_mine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:textColor="#fff"
                android:text="我的" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>