<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayouts">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#138787"
            android:orientation="horizontal">

            <TextView
                android:text="晒图"
                android:id="@+id/title"
                style="@style/TextTitleStyle" />

        </LinearLayout>
    </FrameLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/trainAll"
        android:layout_below="@+id/frameLayouts">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/frameLayout"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout2">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ImageAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fabushaitu"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:background="#90000000"
                    android:layout_gravity="bottom">
                    <Button
                        android:id="@+id/Button_showpiclist"
                        style="@style/TrainButtonText"
                        android:text="晒图列表"
                        android:textSize="20dp" />
                </LinearLayout>

            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trainC"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ImageRumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shaituliebiao"
                    android:scaleType="fitXY" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:background="#90000000"
                    android:layout_gravity="bottom">
                    <Button
                        android:id="@+id/Button_showpicrelease"
                        style="@style/TrainButtonText"
                        android:text="发布晒图"
                        android:textSize="20dp" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>